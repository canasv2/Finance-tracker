<h2>User Details</h2>

<div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>        
      <tr>
        <td><strong>Name: </strong> <%= @user.full_name %></td></td>
        <td><strong>Email: </strong> <%= @user.email %></td>
        <td><strong>Actions: </strong> 
        <% if current_user.not_friends_with?(@user.id) %>
                          <%= link_to 'Follow friend?', friendships_path(friend: @user.id),
                          class: "btn btn-sm btn-success", method: :post %> <!--friend: nombre de objeto a enviar.   friend objeto de iteracion -->
        <% else %>
          <span class="badge badge-secondary">you are friends </span>                    
        <% end %>                              
        </td>
      </tr>        
    </tbody>
  </table>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks</p>    
<% end %>